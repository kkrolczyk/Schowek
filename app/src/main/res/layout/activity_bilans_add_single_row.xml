<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/bilans_row_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="18dp"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bilans_row_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/bilans_row_item"
        android:paddingLeft="25dp"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:id="@+id/bilans_row_current_amount"
        android:layout_alignParentRight="true"
        android:text="0"
        />

    <Button
        android:id="@+id/bilans_row_item_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:text="+"
        android:onClick="bilans_category_item_plus"/>

    <Button
        android:id="@+id/bilans_row_item_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@id/bilans_row_item_plus"
        android:text="-"
        android:onClick="bilans_category_item_minus"/>


</RelativeLayout>